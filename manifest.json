{
  "manifest_version": 3,
  "name": "Chess Piece Customizer",
  "version": "1.0.0",
  "description": "Customize chess pieces on Chess.com with your own images",
  "permissions": [],
  "host_permissions": [
    "*://*.chess.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bp.png"],
      "matches": ["*://*.chess.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

